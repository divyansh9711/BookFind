<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Percy Jackson and The Lightning Theif"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:textStyle="bold"
            android:layout_marginTop="8sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/aurhor_namef"
            android:layout_below="@+id/title"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="8sp"
            android:layout_toEndOf="@+id/aurhor_namef"
            android:layout_below="@+id/title"
            android:id="@+id/aurhor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Paulo cohelo"
            android:textSize="18sp"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="4sp"
            android:id="@+id/publisherf"
            android:layout_alignParentStart="true"
            android:text="Publisher"
            android:layout_below="@+id/aurhor_name"
            android:layout_width="100sp"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="4sp"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/publisherf"
            android:id="@+id/publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aurhor_name"
            tools:text="asdfsdfsadfsdf"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="4sp"
            android:id="@+id/publish_datef"
            android:layout_below="@+id/publisher"
            android:layout_alignParentStart="true"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Published on"
            android:textSize="18sp"/>
        <TextView

            android:layout_marginTop="4sp"
            android:id="@+id/publish_date"
            android:layout_below="@+id/publisher"
            android:layout_toEndOf="@+id/publish_datef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11-11-1997"
            android:textSize="18sp" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="4sp"
            android:id="@+id/ratingf"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/publish_datef"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="18sp" />
        <TextView
            android:layout_marginTop="4sp"
            android:layout_below="@+id/publish_datef"
            android:id="@+id/rating"
            android:layout_toEndOf="@+id/ratingf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="8.0"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="4sp"
            android:textSize="18sp"
            android:text="Price"
            android:id="@+id/pricef"
            android:layout_below="@+id/rating"
            android:layout_alignParentStart="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
         <TextView
             android:layout_marginTop="4sp"
             android:id="@+id/price"
             android:textSize="18sp"
             android:layout_below="@+id/ratingf"
             android:layout_toEndOf="@+id/pricef"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             tools:text="45100 INR"/>


        <TextView
            android:layout_below="@+id/price"
            android:textStyle="bold"
            android:layout_marginTop="4sp"
            android:id="@+id/descriptionf"
            android:text="Description"
            android:textSize="18sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_marginTop="4sp"
            android:id="@+id/description_scroll"
            android:layout_below="@+id/descriptionf"
            android:layout_width="match_parent"
            android:layout_height="200sp">
            <TextView

                android:id="@+id/description"
                tools:text="asd asdf asdf asdf asdf asdf asdf sdf asdf asdf asdf asdf sdf asdf dsf asdf asdf asdf asdf sdf asdf "
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
        <Button
            android:id="@+id/info_link"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/description_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read More"/>
    </RelativeLayout>
</ScrollView>